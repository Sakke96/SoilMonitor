<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/moistureGrid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="2"
    android:columnCount="2"
    android:padding="16dp">

    <!-- Plant 1 -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp">

        <com.example.soilmonitor.WaveView
            android:id="@+id/plant1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Value overlay -->
        <TextView
            android:id="@+id/plant1Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:elevation="4dp" />

        <!-- Label on top -->
        <TextView
            android:id="@+id/plant1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant 1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="top|start"
            android:padding="4dp"
            android:elevation="6dp" />
    </FrameLayout>

    <!-- Plant 2 -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp">

        <com.example.soilmonitor.WaveView
            android:id="@+id/plant2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/plant2Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/plant2Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant 2"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="top|start"
            android:padding="4dp"
            android:elevation="6dp" />
    </FrameLayout>

    <!-- Plant 3 -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp">

        <com.example.soilmonitor.WaveView
            android:id="@+id/plant3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/plant3Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/plant3Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant 3"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="top|start"
            android:padding="4dp"
            android:elevation="6dp" />
    </FrameLayout>

    <!-- Plant 4 -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp">

        <com.example.soilmonitor.WaveView
            android:id="@+id/plant4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/plant4Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/plant4Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plant 4"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_gravity="top|start"
            android:padding="4dp"
            android:elevation="6dp" />
    </FrameLayout>

</GridLayout>