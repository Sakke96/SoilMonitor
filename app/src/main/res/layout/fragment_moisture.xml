        android:id="@+id/moistureGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <!-- Plant 1 -->
    <FrameLayout
        android:id="@+id/plant1Container"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="8dp">

        <com.example.soilmonitor.WaveView
            android:id="@+id/plant1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/plant1Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:elevation="4dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/plant1Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant 1"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:elevation="6dp" />

            <TextView
                android:id="@+id/plant1DryHit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected dry hit: -"
                android:textSize="12sp"
                android:textColor="@android:color/black"
                android:elevation="4dp" />
        </LinearLayout>
    </FrameLayout>

